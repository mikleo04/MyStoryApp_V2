<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyStoryApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/beige</item>
        <item name="colorPrimaryVariant">@color/beige2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey</item>
        <item name="colorSecondaryVariant">@color/grey2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>

        <!-- Transition -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
        <!-- End of transition -->
    </style>

    <style name="Theme.MyStoryApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MyStoryApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.MyStoryApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Text Input Layout -->
    <style name="text_input_layout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextColor">#F10909</item>
        <item name="boxCornerRadiusBottomEnd">50dp</item>
        <item name="boxCornerRadiusBottomStart">50dp</item>
        <item name="boxCornerRadiusTopStart">50dp</item>
        <item name="boxCornerRadiusTopEnd">50dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="text_input_layout.password">
        <item name="startIconDrawable">@drawable/ic_lock</item>
        <item name="android:hint">@string/password</item>
        <item name="passwordToggleEnabled">true</item>
    </style>
    <style name="text_input_layout.email">
        <item name="startIconDrawable">@drawable/ic_email</item>
        <item name="android:hint">@string/email</item>
    </style>
    <!--End of Text Input Layout-->

    <!-- Iput Field -->
    <style name="input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="input.password">
        <item name="android:ellipsize">end</item>
        <item name="android:inputType">textPassword</item>
    </style>
    <style name="input.email">
        <item name="android:ellipsize">end</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>
    <!-- End of Input Field -->

    <!-- Progress Bar -->
    <style name="progress_bar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:visibility">gone</item>
    </style>
    <style name="progress_bar.inline">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>
    <!-- End of Progress Bar -->
</resources>